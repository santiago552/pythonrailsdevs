<div class="flex flex-wrap items-start">
  <% if featured? %>
    <div class="mr-4 mb-2">
      <%= render BadgeComponent.new(t(".featured"), color: "blue") %>
    </div>
  <% end %>

  <% if recently_active? %>
    <div class="mr-4 mb-2">
      <%= render BadgeComponent.new(t(".recently_active"), color: "green") %>
    </div>
  <% end %>

  <% if source_contributor? %>
    <div class="mr-4 mb-2">
      <%= render BadgeComponent.new(t(".source_contributor"), color: "gray") %>
    </div>
  <% end %>

  <% if response_rate >= HasBadges::HIGH_RESPONSE_RATE_CUTTOFF %>
    <div class="mr-4 mb-2">
      <%= render BadgeComponent.new(t(".high_response_rate"), color: "purple") %>
    </div>
  <% end %>
</div>
